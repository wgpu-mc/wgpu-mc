{
  "schemaVersion": 1,
  "id": "wgpu_mc",
  "version": "0.1",

  "name": "wgpu-mc",
  "description": "A renderer made to replace Blaze3D, written in Rust, using wgpu for cross-platform support.\nSupported backends: Vulkan, D3D12, and Metal",
  "authors": [
    "birb"
  ],
  "accessWidenerPath": "wgpu_mc.accesswidener",
  "contact": {
    "homepage": "https://github.com/wgpu-mc/wgpu-mc",
    "sources": "https://github.com/wgpu-mc/wgpu-mc"
  },

  "license": "GPL3",
  "icon": "assets/wgpu_mc/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "dev.birb.wgpu.WgpuMcMod"
    ]
  },
  "mixins": [
    "wgpu.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x"
  },
  "suggests": {
    "another-mod": "*"
  },
  "custom": {
    "fabric-renderer-api-v1:contains_renderer": "true"
  }
}
